<UserControl 
    x:Class="BDC_V1.Views.InventoryDetailsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:BDC_V1.Views"
    xmlns:prism="http://prismlibrary.com/"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d" 
    d:DesignHeight="800" d:DesignWidth="1000">
    
    <ScrollViewer
        HorizontalScrollBarVisibility="Auto"
        >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <Label
                Grid.Row="0" Grid.Column="0" 
                Content="Current Section:"
                Style="{StaticResource LabelRJ}"/>
            <TextBox
                Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3"
                Style="{StaticResource TextBoxWrap}"
                Text="{Binding InventoryDetails.CurrentSection}"
                />

            <Label
                Grid.Row="1" Grid.Column="0" 
                Content="Detail Selector:"
                Style="{StaticResource LabelRJ}"/>
            <ComboBox
                Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3"
                ItemsSource="{Binding InventoryDetails.DetailSelectors}"
                SelectedItem="{Binding InventoryDetails.DetailSelector}"
                Style="{StaticResource ComboBase}"
                />
            <Button
                Grid.Row="1" Grid.Column="4" 
                Content="Grid"
                Margin="5"
                Width="75"
                />

            <Label
                Grid.Row="2" Grid.Column="0" 
                Content="Detail ID Number:"
                Style="{StaticResource LabelRJ}"/>
            <TextBox
                Grid.Row="2" Grid.Column="1" 
                Style="{StaticResource TextBoxNoWrap}"
                Text="{Binding InventoryDetails.DetailIdNumber}"
                />
            <Label
                Grid.Row="2" Grid.Column="2" 
                Content="Location:"
                Style="{StaticResource LabelRJ}"/>
            <TextBox
                Grid.Row="2" Grid.Column="3" 
                Style="{StaticResource TextBoxNoWrap}"
                Text="{Binding InventoryDetails.Location}"
                />

            <Label
                Grid.Row="3" Grid.Column="0" 
                Content="Model:"
                Style="{StaticResource LabelRJ}"/>
            <TextBox
                Grid.Row="3" Grid.Column="1" 
                Style="{StaticResource TextBoxNoWrap}"
                Text="{Binding InventoryDetails.Model}"
                />
            <Label
                Grid.Row="3" Grid.Column="2" 
                Content="Serial Number:"
                Style="{StaticResource LabelRJ}"/>
            <TextBox
                Grid.Row="3" Grid.Column="3" 
                Style="{StaticResource TextBoxNoWrap}"
                Text="{Binding InventoryDetails.SerialNumber}"
                />
            <Image
                Grid.Row="3" Grid.Column="4" 
                HorizontalAlignment="Left"
                Margin="5"
                Source="/BDC_V1;component/Resources/BarcodeScan2.png"
                Width="40"
                />

            <Label
                Grid.Row="4" Grid.Column="0" 
                Content="Manufacturer:"
                Style="{StaticResource LabelRJ}"/>
            <ComboBox
                Grid.Row="4" Grid.Column="1" 
                ItemsSource="{Binding InventoryDetails.Manufacturers}"
                SelectedItem="{Binding InventoryDetails.Manufacturer}"
                Style="{StaticResource ComboBase}"
                />
            <Label
                Grid.Row="4" Grid.Column="2" 
                Content="Capacity:"
                Style="{StaticResource LabelRJ}"/>
            <TextBox
                Grid.Row="4" Grid.Column="3" 
                Style="{StaticResource TextBoxNoWrap}"
                Text="{Binding InventoryDetails.Capacity}"
                />

            <Label
                Grid.Row="5" Grid.Column="0" 
                Content="Equipment Type:"
                Style="{StaticResource LabelRJ}"/>
            <TextBox
                Grid.Row="5" Grid.Column="1" 
                Style="{StaticResource TextBoxNoWrap}"
                Text="{Binding InventoryDetails.EquipmentType}"
                />
            <Label
                Grid.Row="5" Grid.Column="2" 
                Content="Equip. Make:"
                Style="{StaticResource LabelRJ}"/>
            <ComboBox
                Grid.Row="5" Grid.Column="3" 
                Style="{StaticResource ComboBase}"
                />

            <Label
                Grid.Row="6" Grid.Column="0" 
                Content="Date Manufactured:"
                Style="{StaticResource LabelRJ}"/>
            <DatePicker
                Grid.Row="6" Grid.Column="1" 
                Style="{StaticResource dpBase}"
                Text="{Binding InventoryDetails.DateManufactured}"
                />
            <Label
                Grid.Row="6" Grid.Column="2" 
                Content="Year Installed:"
                Style="{StaticResource LabelRJ}"/>
            <TextBox
                Grid.Row="6" Grid.Column="3" 
                Style="{StaticResource TextBoxNoWrap}"
                Text="{Binding InventoryDetails.YearInstalled}"
                />

            <Label
                Grid.Row="7" Grid.Column="0" 
                Content="Control Type/Make:"
                Style="{StaticResource LabelRJ}"/>
            <TextBox
                Grid.Row="7" Grid.Column="1" 
                Style="{StaticResource TextBoxNoWrap}"
                Text="{Binding InventoryDetails.ControlTypeMake}"
                />

            <Label
                Grid.Row="8" Grid.Column="0" 
                Content="Warranty Date:"
                Style="{StaticResource LabelRJ}"/>
            <DatePicker
                Grid.Row="8" Grid.Column="1" 
                Style="{StaticResource dpBase}"
                Text="{Binding InventoryDetails.WarrantyDate}"
                />
            <Label
                Grid.Row="8" Grid.Column="2" 
                Content="Warr. Company:"
                Style="{StaticResource LabelRJ}"/>
            <TextBox
                Grid.Row="8" Grid.Column="3" 
                Style="{StaticResource TextBoxNoWrap}"
                Text="{Binding InventoryDetails.WarrantyCompany}"
                />

            <Label
                Grid.Row="9" Grid.Column="0" 
                Content="Warranty Date 2:"
                Style="{StaticResource LabelRJ}"/>
            <DatePicker
                Grid.Row="9" Grid.Column="1" 
                Style="{StaticResource dpBase}"
                Text="{Binding InventoryDetails.WarrantyDate2}"
                />
            <Label
                Grid.Row="9" Grid.Column="2" 
                Content="Warr. Company:"
                Style="{StaticResource LabelRJ}"/>
            <TextBox
                Grid.Row="9" Grid.Column="3" 
                Style="{StaticResource TextBoxNoWrap}"
                Text="{Binding InventoryDetails.WarrantyCompany2}"
                />

            <Grid 
                Grid.Row="10" Grid.Column="0" Height="120"
                Margin="5"
                >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                    Grid.RowSpan="3"
                    Background="LightBlue"
                    BorderBrush="Black"
                    BorderThickness="1" />
                <Image Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Source="/BDC_V1;component/Resources/EditText_Comments.png"
                    Width="40" />
                <Label Grid.Row="1"
                    Content="Detail Comment"
                    Margin="0"
                    Style="{StaticResource LabelCJ}" />
            </Grid>
            <TextBox
                Grid.Row="10" Grid.Column="1"  Grid.ColumnSpan="3"
                Margin="5"
                Style="{StaticResource TextBoxWrap}"
                Text="{Binding InventoryDetails.DetailComment}"
                />

            <Grid 
                Grid.Row="11" Grid.Column="0" Height="120"
                Margin="5"
                >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                    Grid.RowSpan="4"
                    Background="LightBlue"
                    BorderBrush="Black"
                    BorderThickness="1"/>
                <Image Grid.Row="0"
                    HorizontalAlignment="Center"
                       Margin="0,5,0,0"
                    Source="/BDC_V1;component/Resources/Photos_cropped.jpg"
                    VerticalAlignment="Center"
                    Width="40"/>
                <Label Grid.Row="1"
                    Content="Detail Photo(s)"
                    Style="{StaticResource LabelCJ}" />
                <Label Grid.Row="2"
                    Content="{Binding InventoryDetails.Images.Count}"
                    Style="{StaticResource LabelCJ}" />
            </Grid >
            <Grid Grid.Row="11" Grid.Column="1" Grid.ColumnSpan="3"
                  Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Background="BlanchedAlmond" />
                <Grid Grid.Column="0" Height="120" Width="200" Margin="2 0 2 0">
                    <Border BorderBrush="Black"
                        BorderThickness="1"
                        Background="White" />
                    <Image HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Stretch="UniformToFill"
                        Source="{Binding InventoryDetails.Images[0]}"/>
                </Grid>
                <Grid 
                    Grid.Column="1" 
                    Height="120" Width="200" 
                    Margin="2 0 2 0"
                    >
                    <Border 
                        BorderBrush="Black"
                        BorderThickness="1"
                        Background="White" />
                    <Image 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Stretch="UniformToFill"
                        Source="{Binding InventoryDetails.Images[1]}" />
                </Grid>
            </Grid>

            <Button
                Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="4"
                Content="Cancel Edit"
                HorizontalAlignment="Left"
                Margin="10, 5, 5, 5"
                Width="125"
                />
            <Button
                Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="4"
                Content="Delete Detail"
                HorizontalAlignment="Center"
                Margin="5"
                Width="125"
                />
            <Button
                Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="4"
                Content="Add Detail"
                HorizontalAlignment="Right"
                Margin="5,5,10,5"
                Width="125"
                />
            <Button
                Grid.Row="13" Grid.Column="0" Grid.ColumnSpan="4"
                Content="Add Detail"
                HorizontalAlignment="Right"
                Margin="5,5,10,5"
                Width="125"
                />
        </Grid>
    </ScrollViewer>
</UserControl>
