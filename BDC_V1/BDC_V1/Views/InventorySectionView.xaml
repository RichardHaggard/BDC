<UserControl 
    x:Class="BDC_V1.Views.InventorySectionView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:BDC_V1.Views"
    xmlns:prism="http://prismlibrary.com/"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d" 
    d:DesignHeight="600" d:DesignWidth="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--maybe a label and a spin control here?-->
        <Label 
            Grid.Row="0" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1"
            Content="Section Name:"
            Style="{StaticResource LabelRJ}"/>
        <ComboBox
            Grid.Row="0" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="8"
            ItemsSource="{Binding SectionNames}"
            SelectedItem="{Binding SectionName}"
            Style="{StaticResource ComboBase}"
            />
        
        <Label 
            Grid.Row="1" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1"
            Content="Equipment Category:"
            Style="{StaticResource LabelRJ}"/>
        <ComboBox
            Grid.Row="1" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="8"
            ItemsSource="{Binding EquipmentCategorys}"
            SelectedItem="{Binding EquipmentCategory}"
            Style="{StaticResource ComboBase}"
            />
        
        <Label 
            Grid.Row="2" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1"
            Content="Component Type:"
            Style="{StaticResource LabelRJ}"/>
        <ComboBox
            Grid.Row="2" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="8"
            ItemsSource="{Binding ComponentTypes}"
            SelectedItem="{Binding ComponentType}"
            Style="{StaticResource ComboBase}"
            />
        
        <Label 
            Grid.Row="3" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1"
            Content="Quantity:"
            Style="{StaticResource LabelRJ}"/>
        <TextBox
            Grid.Row="3" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="1"
            Width="75"
            Text="{Binding Quantity}"
            />
        <Label 
            Grid.Row="3" Grid.RowSpan="1" Grid.Column="2" Grid.ColumnSpan="1"
            Content="EA"
            Style="{StaticResource LabelLJ}"/>
        <Border
            Grid.Row="3" Grid.RowSpan="1" Grid.Column="3" Grid.ColumnSpan="1"
            Background="Green"
            BorderBrush="Black" BorderThickness="1"
            Height="35"
            Margin="2, 2, 10, 2"
            Width="35"
            />
        <Label
            Grid.Row="3" Grid.RowSpan="1" Grid.Column="3" Grid.ColumnSpan="1"
            Content="+"
            FontSize="30"
            HorizontalContentAlignment="Center" 
            Margin="2, 2, 10, 2"
            VerticalContentAlignment="Center"
            />
        <Border
            Grid.Row="3" Grid.RowSpan="1" Grid.Column="4" Grid.ColumnSpan="1"
            Background="Red"
            BorderBrush="Black" BorderThickness="1"
            Height="35"
            Margin="2, 2, 10, 2"
            Width="35"
            />
        <Label
            Grid.Row="3" Grid.RowSpan="1" Grid.Column="4" Grid.ColumnSpan="1"
            Content="-"
            FontSize="30"
            HorizontalContentAlignment="Center" 
            Margin="2, 2, 10, 2"
            VerticalContentAlignment="Center"
            />
        <Label
            Grid.Row="3" Grid.RowSpan="1" Grid.Column="5" Grid.ColumnSpan="1"
            Content="Select"
            Style="{StaticResource LabelRJ}"/>
        <Label
            Grid.Row="3" Grid.RowSpan="1" Grid.Column="6" Grid.ColumnSpan="1"
            Content="G.S.F."
            Style="{StaticResource LabelGray}"/>
        <Label
            Grid.Row="3" Grid.RowSpan="1" Grid.Column="7" Grid.ColumnSpan="1"
            Content="Footprint"
            Style="{StaticResource LabelGray}"/>
        <Label
            Grid.Row="3" Grid.RowSpan="1" Grid.Column="8" Grid.ColumnSpan="1"
            Content="Perimeter"
            Style="{StaticResource LabelGray}"/>

        <Label
            Grid.Row="4" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1"
            Content="NOT Energy Efficient:"
            Style="{StaticResource LabelRJ}"/>
        <CheckBox 
            Grid.Row="4" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="1"
            />

        <Label
            Grid.Row="5" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1"
            Content="Painted/Coated:"
            Style="{StaticResource LabelRJ}"/>
        <CheckBox 
            Grid.Row="5" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="1"
            IsChecked="{Binding PaintedIsChecked}"
            />
        <Label
            Grid.Row="5" Grid.RowSpan="1" Grid.Column="2" Grid.ColumnSpan="1"
            Content="Year P/C:"
            Style="{StaticResource LabelRJ}"
            Visibility="{Binding YearPcVisibility}"
            />
        <TextBox
            Grid.Row="5" Grid.RowSpan="1" Grid.Column="3" Grid.ColumnSpan="1"
            Text="{Binding YearPc}"
            />
        <Label
            Grid.Row="5" Grid.RowSpan="1" Grid.Column="6" Grid.ColumnSpan="1"
            Content="P/C Type:"
            Style="{StaticResource LabelRJ}"
            Visibility="{Binding YearPcVisibility}"
            />
        <ComboBox
            Grid.Row="5" Grid.RowSpan="1" Grid.Column="7" Grid.ColumnSpan="2"
            Text="{Binding PcType}"
            ItemsSource="{Binding PcTypes}"
            SelectedItem="{Binding PcType}"
            Style="{StaticResource ComboBase}"
            Visibility="{Binding YearPcVisibility}"
            />

        <Grid
            Grid.Row="6" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1"
            >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Border
                Grid.Row="0" Grid.RowSpan="2"
                Style="{StaticResource BorderBlue}"
                />
            <Image 
                Grid.Row="0" 
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Margin="0,5,0,0"
                Source="/BDC_V1;component/Resources/EditText_Comments.png"
                Width="40"
                />
            <Label
                Grid.Row="1"
                Content="Section Comment"
                Style="{StaticResource LabelCJ}"/>
            <Grid
                Grid.Row="2"
                    Margin="0,5,0,0"
                >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Border
                    Grid.ColumnSpan="2"
                    Background="LightBlue"
                    />
                <CheckBox 
                    Grid.Column="0"
                    Content="Remember"
                    HorizontalContentAlignment="Center"
                    Margin="5,0,0,0"
                    VerticalContentAlignment="Center"
                    Style="{StaticResource cbBase}"/>
                <Image 
                    Grid.Column="1"
                    Margin="0,1,5,1"
                    Source="/BDC_V1;component/Resources/Remember.png"
                    Width="35"
                    />
            </Grid>
        </Grid>
        <Border
            Grid.Row="6" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="8"
            Style="{StaticResource BorderYO}"
            />
        <TextBox
            Grid.Row="6" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="8"
            Text="{Binding SectionComment}"
            />

        <Grid Grid.Row="7">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Border
                Grid.Row="0" Grid.RowSpan="3" Grid.Column="0"
                Style="{StaticResource BorderBlue}"
                />
            <Image
                    Grid.Row="0" 
                    Source="/BDC_V1;component/Resources/Photos_cropped.jpg" 
                    Width="40"
                    />
            <Label 
                    Grid.Row="1" 
                    Content="Photo(s)"
                    Style="{StaticResource LabelCJ}"/>
            <Label 
                    Grid.Row="2" 
                    Content="{Binding PhotoQty}"
                    Style="{StaticResource LabelCJ}"/>
        </Grid>
        <Border 
            Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="8" 
            Style="{StaticResource BorderYO}"
            />
        <Border 
            Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2" 
            BorderBrush="Black" BorderThickness="1"
            Background="White" />
        <TextBox 
            Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2" 
            TextWrapping="Wrap"
            HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
            Text="Thumbnail 1 of Facility Photo"
            />
        <Border 
            Grid.Row="7" Grid.Column="4" Grid.ColumnSpan="2" 
            BorderBrush="Black" BorderThickness="1"
            Background="White" />
        <TextBox 
            Grid.Row="7" Grid.Column="4" Grid.ColumnSpan="2" 
            TextWrapping="Wrap"
            HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
            Text="Thumbnail 2 of section"
            Style="{StaticResource TextBoxWrap }"
            />

        <CheckBox
            Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="1" 
            Content="Add current inspector"
            FontSize="15"
            IsChecked="{Binding AddCurrentInspector}"
            />
        <Label
            Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="1" 
            Content="Date:"
            Style="{StaticResource LabelRJ}"
            />
        <DatePicker
            Grid.Row="8" Grid.Column="2" Grid.ColumnSpan="1" 
            FontSize="15"
            Width="100"
            Text="{Binding Date}"
            />
        <Label
            Grid.Row="8" Grid.Column="3" Grid.ColumnSpan="1" 
            Content="DCR:"
            Style="{StaticResource LabelRJ}"
            />
        <ComboBox
            Grid.Row="8" Grid.Column="4" Grid.ColumnSpan="1" 
            FontSize="15"
            ItemsSource="{Binding Dcrs}"
            SelectedItem="{Binding Dcr}"
            Style="{StaticResource ComboBase}"
            />
        <Label
            Grid.Row="8" Grid.Column="5" Grid.ColumnSpan="1" 
            Content="P/C Rating:"
            Style="{StaticResource LabelRJ}"
            />
        <ComboBox
            Grid.Row="8" Grid.Column="6" Grid.ColumnSpan="1" 
            FontSize="15"
            Style="{StaticResource ComboBase}"
            />


    </Grid>
</UserControl>
