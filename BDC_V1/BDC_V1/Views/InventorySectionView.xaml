<UserControl 
    x:Class="BDC_V1.Views.InventorySectionView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:BDC_V1.Views"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d" 
    d:DesignHeight="800" d:DesignWidth="1000">

  <i:Interaction.Triggers>
    <i:EventTrigger EventName="Loaded">
      <i:InvokeCommandAction Command="{Binding ViewActivated}" />
    </i:EventTrigger>
  </i:Interaction.Triggers>

    <ScrollViewer
        HorizontalScrollBarVisibility="Auto"
        >
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="190" />
                <ColumnDefinition Width="130" />
                <ColumnDefinition Width="130" />
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--maybe a label and a spin control here?-->
            <Label 
                Grid.Row="0" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1"
                Content="Section Name:"
                Style="{StaticResource LabelRJ}"/>
            <ComboBox
                Grid.Row="0" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="9"
                ItemsSource="{Binding InventorySection.SectionNames}"
                SelectedItem="{Binding InventorySection.SectionName}"
                Style="{StaticResource ComboBase}"
                />

            <Label 
                Grid.Row="1" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1"
                Content="Equipment Category:"
                Style="{StaticResource LabelRJ}"/>
            <ComboBox
                Grid.Row="1" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="9"
                ItemsSource="{Binding InventorySection.EquipmentCategories}"
                SelectedItem="{Binding InventorySection.EquipmentCategory}"
                Style="{StaticResource ComboBase}"
                />

            <Label 
                Grid.Row="2" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1"
                Content="Component Type:"
                Style="{StaticResource LabelRJ}"/>
            <ComboBox
                Grid.Row="2" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="9"
                ItemsSource="{Binding InventorySection.ComponentTypes}"
                SelectedItem="{Binding InventorySection.ComponentType}"
                Style="{StaticResource ComboBase}"
                />

            <Label 
                Grid.Row="3" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1"
                Content="Quantity:"
                Style="{StaticResource LabelRJ}"/>
            <TextBox
                Grid.Row="3" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="1"
                Style="{StaticResource TextBoxNoWrap}"
                Text="{Binding InventorySection.Quantity}"
                />
            <Label 
                Grid.Row="3" Grid.RowSpan="1" Grid.Column="2" Grid.ColumnSpan="1"
                Content="EA"
                Style="{StaticResource LabelLJ}"/>
            <Border
                Grid.Row="3" Grid.RowSpan="1" Grid.Column="3" Grid.ColumnSpan="1"
                Background="Green"
                BorderBrush="Black" BorderThickness="1"
                Height="35"
                Margin="2, 2, 10, 2"
                Width="35"
                />
            <Label
                Grid.Row="3" Grid.RowSpan="1" Grid.Column="3" Grid.ColumnSpan="1"
                Content="+"
                FontSize="30"
                HorizontalContentAlignment="Center" 
                Margin="2, 2, 10, 2"
                VerticalContentAlignment="Center"
                />
            <Border
                Grid.Row="3" Grid.RowSpan="1" Grid.Column="4" Grid.ColumnSpan="1"
                Background="Red"
                BorderBrush="Black" BorderThickness="1"
                Height="35"
                Margin="2, 2, 10, 2"
                Width="35"
                />
            <Label
                Grid.Row="3" Grid.RowSpan="1" Grid.Column="4" Grid.ColumnSpan="1"
                Content="-"
                FontSize="30"
                HorizontalContentAlignment="Center" 
                Margin="2, 2, 10, 2"
                VerticalContentAlignment="Center"
                />
            <Label
                Grid.Row="3" Grid.RowSpan="1" Grid.Column="5" Grid.ColumnSpan="1"
                Content="Select"
                Style="{StaticResource LabelRJ}"/>
            <TextBox
                Grid.Row="3" Grid.RowSpan="1" Grid.Column="6" Grid.ColumnSpan="1"
                Text="G.S.F."
                Style="{StaticResource TextBoxNoWrap}"/>
            <TextBox
                Grid.Row="3" Grid.RowSpan="1" Grid.Column="7" Grid.ColumnSpan="1"
                Text="Footprint"
                Style="{StaticResource TextBoxNoWrap}"/>
            <TextBox
                Grid.Row="3" Grid.RowSpan="1" Grid.Column="8" Grid.ColumnSpan="1"
                Text="Perimeter"
                Style="{StaticResource TextBoxNoWrap}"/>

            <Label
                Grid.Row="4" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1"
                Content="Year Installed/Renewed:"
                Style="{StaticResource LabelRJ}"/>
            <DatePicker
                Grid.Row="4" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="1"
                Style="{StaticResource dpBase}"
                Text="{Binding InventorySection.YearInstalledRenewed}"
                />
            <CheckBox
                Grid.Row="4" Grid.RowSpan="1" Grid.Column="2" Grid.ColumnSpan="2"
                FontSize="15"
                Content="Estimated"
                />

            <Label
                Grid.Row="5" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1"
                Content="NOT Energy Efficient:"
                Style="{StaticResource LabelRJ}"/>
            <CheckBox 
                Grid.Row="5" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="1"
                FontSize="15"
                />

            <Label
                Grid.Row="6" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1"
                Content="Painted/Coated:"
                Style="{StaticResource LabelRJ}"/>
            <CheckBox 
                Grid.Row="6" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="1"
                IsChecked="{Binding InventorySection.PaintedIsChecked}"
                />
            <Label
                Grid.Row="6" Grid.RowSpan="1" Grid.Column="2" Grid.ColumnSpan="1"
                Content="Year P/C:"
                Style="{StaticResource LabelRJ}"
                Visibility="{Binding InventorySection.YearPcVisibility}"
                />
            <TextBox
                Grid.Row="6" Grid.RowSpan="1" Grid.Column="3" Grid.ColumnSpan="1"
                Style="{StaticResource TextBoxNoWrap}"
                Text="{Binding InventorySection.YearPc}"
                Visibility="{Binding InventorySection.YearPcVisibility}"
                />
            <Label
                Grid.Row="6" Grid.RowSpan="1" Grid.Column="5" Grid.ColumnSpan="1"
                Content="P/C Type:"
                Style="{StaticResource LabelRJ}"
                Visibility="{Binding InventorySection.YearPcVisibility}"
                />
            <ComboBox
                Grid.Row="6" Grid.RowSpan="1" Grid.Column="6" Grid.ColumnSpan="3"
                Text="{Binding InventorySection.PcType}"
                ItemsSource="{Binding InventorySection.PcTypes}"
                SelectedItem="{Binding InventorySection.PcType}"
                Style="{StaticResource ComboBase}"
                Visibility="{Binding InventorySection.YearPcVisibility}"
                />

            <Grid
                Grid.Row="7" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1"
                >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Border
                    Grid.Row="0" Grid.RowSpan="2"
                    Style="{StaticResource BorderBlue}"
                    />
                <Image 
                    Grid.Row="0" 
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Margin="0,5,0,0"
                    Source="/BDC_V1;component/Resources/EditText_Comments.png"
                    Width="40"
                    />
                <Label
                    Grid.Row="1"
                    Content="Section Comment"
                    Style="{StaticResource LabelCJ}"/>
                <Grid
                    Grid.Row="2"
                    Margin="5,0,5,0"
                    >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Border
                        Grid.ColumnSpan="2"
                        Background="LightBlue"
                        />
                    <CheckBox 
                        Grid.Column="0"
                        Content="Remember"
                        HorizontalContentAlignment="Center"
                        Margin="5,0,0,0"
                        VerticalContentAlignment="Center"
                        Style="{StaticResource cbBase}"/>
                    <Image 
                        Grid.Column="1"
                        Margin="2"
                        Source="/BDC_V1;component/Resources/Remember.png"
                        Width="25"
                        />
                </Grid>
            </Grid>
            <TextBox
                Grid.Row="7" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="8"
                Margin="5"
                Style="{StaticResource TextBoxWrap}"
                Text="{Binding InventorySection.SectionComment}"
                />

            <Grid 
                Grid.Row="8"
                >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Border
                    Grid.Row="0" Grid.RowSpan="3" Grid.Column="0"
                    Style="{StaticResource BorderBlue}"
                    />
                <Image
                    Grid.Row="0" 
                    Margin="0,9,0,0"
                    Source="/BDC_V1;component/Resources/Photos_cropped.jpg" 
                    Width="40"
                    />
                <Label 
                    Grid.Row="1" 
                    Content="Section Photo(s)"
                    Style="{StaticResource LabelCJ}"/>
                <Label 
                    Grid.Row="2" 
                    Content="{Binding ElementName=ImagesList, Path=Items.Count}"
                    Style="{StaticResource LabelCJ}"/>
            </Grid>

            <Border x:Name="ItemsBorder" Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="8"
                    Style="{StaticResource BorderYO}"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
              <ItemsControl x:Name="ImagesList" prism:RegionManager.RegionName="InventorySectionItemControl" />
            </Border>

            <CheckBox
                Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="1" 
                Content="Add current inspector"
                FontSize="15"
                Margin="5"
                IsChecked="{Binding InventorySection.AddCurrentInspector}"
                />
            <Label
                Grid.Row="9" Grid.Column="1" Grid.ColumnSpan="1" 
                Content="Date:"
                Style="{StaticResource LabelRJ}"
                />
            <DatePicker
                Grid.Row="9" Grid.Column="2" Grid.ColumnSpan="1" 
                Style="{StaticResource dpBase}"
                Text="{Binding InventorySection.Date}"
                />
            <Label
                Grid.Row="9" Grid.Column="3" Grid.ColumnSpan="1" 
                Content="DCR:"
                Style="{StaticResource LabelRJ}"
                />
            <ComboBox
                Grid.Row="9" Grid.Column="4" Grid.ColumnSpan="1" 
                FontSize="15"
                ItemsSource="{Binding InventorySection.Dcrs}"
                SelectedItem="{Binding InventorySection.Dcr}"
                Style="{StaticResource ComboBase}"
                />
            <Label
                Grid.Row="9" Grid.Column="5" Grid.ColumnSpan="1" 
                Content="P/C Rating:"
                Style="{StaticResource LabelRJ}"
                />
            <ComboBox
                Grid.Row="9" Grid.Column="6" Grid.ColumnSpan="1" 
                FontSize="15"
                Style="{StaticResource ComboBase}"
                />

            <Button
                Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="9" 
                Content="Cancel Edit"
                HorizontalAlignment="Left"
                Margin="25, 5, 0, 5"
                Width="125"
                />
            <Button
                Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="9" 
                Content="Delete Section"
                HorizontalAlignment="Center"
                Margin="5"
                Width="125"
                />
            <Button
                Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="9" 
                Content="Delete Section"
                HorizontalAlignment="Right"
                Margin="0,5,25,5"
                Width="125"
                />

        </Grid>
    </ScrollViewer>
</UserControl>
