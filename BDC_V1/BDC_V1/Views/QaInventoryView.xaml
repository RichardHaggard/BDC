        <Style TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Background" Value="LightGray" />
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Height" Value="35" />
            <Setter Property="Margin" Value="0"></Setter>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="WhiteSmoke" />
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
    </UserControl.Resources>

    <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                  VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="5"    />     <!--  0 - white space at top -->
                <RowDefinition Height="Auto" />     <!--  1 - Component -->
                <RowDefinition Height="5"    />     <!--  2 - white space between buttons and datagrid -->
                <RowDefinition Height="Auto" />     <!--  3 - Component Type -->
                <RowDefinition Height="5"    />     <!-- 14 - white space at bottom -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5" />  <!-- white space to the left -->
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="490" />
                <ColumnDefinition Width="5" />  <!-- white space to the right -->
            </Grid.ColumnDefinitions>

            <!-- DataGrid -->
            <DataGrid Name="LvUsers" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="6" Width="990"
                      ItemsSource="{Binding InventoryInfo}"
                      CanUserSortColumns="True"
                      GridLinesVisibility="All"
                      AutoGenerateColumns="False"
                      >
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Path=FacilityId}" Width="100"
                                        diagnostics:PresentationTraceSources.TraceLevel="High">
                        <i:Interaction.Triggers> 
                            <i:EventTrigger EventName="Click"> 
                                <i:InvokeCommandAction Command="{
                                    Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}},
                                            Path=DataContext.CmdFilterByFacilityId}"
                                    diagnostics:PresentationTraceSources.TraceLevel="High"/>  
                            </i:EventTrigger> 
                        </i:Interaction.Triggers> 
                        <DataGridTextColumn.Header>
                            <Grid HorizontalAlignment="Stretch" 
                                  VerticalAlignment="Stretch"
                                  Margin="2">
                                <Border SnapsToDevicePixels="True" 
                                        Background="Transparent" 
                                        BorderThickness="0">
                                    <DockPanel>
                                        <TextBlock Text="Fac. ID:" 
                                                   DockPanel.Dock="Left" 
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center"/>
                                        <!-- ??? Why are these bitmaps not transparent ??? -->
                                        <Image Source="/BDC_V1;component/Resources/Filter.png"
                                               DockPanel.Dock="Right"
                                               HorizontalAlignment="Right" 
                                               VerticalAlignment="Center"/>
                                    </DockPanel>
                                </Border>
                            </Grid>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Path=SystemId}" Width="100">
                        <i:Interaction.Triggers> 
                            <i:EventTrigger EventName="Click"> 
                                <i:InvokeCommandAction Command="{
                                    Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}},
                                            Path=DataContext.CmdFilterBySystemId}"
                                    diagnostics:PresentationTraceSources.TraceLevel="High"/>  
                            </i:EventTrigger> 
                        </i:Interaction.Triggers> 
                        <DataGridTextColumn.Header>
                            <Grid HorizontalAlignment="Stretch" 
                                  VerticalAlignment="Stretch"
                                  Margin="2">
                                <Border SnapsToDevicePixels="True" 
                                        Background="Transparent" 
                                        BorderThickness="0">
                                    <DockPanel>
                                        <TextBlock Text="Syst.:" 
                                                   DockPanel.Dock="Left" 
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center"/>
                                        <Image Source="/BDC_V1;component/Resources/Filter.png"
                                               DockPanel.Dock="Right"
                                               HorizontalAlignment="Right" 
                                               VerticalAlignment="Center"/>
                                    </DockPanel>
                                </Border>
                            </Grid>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Path=ComponentId}" Width="100">
                        <i:Interaction.Triggers> 
                            <i:EventTrigger EventName="Click"> 
                                <i:InvokeCommandAction Command="{
                                    Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}},
                                            Path=DataContext.CmdFilterByComponentId}"
                                    diagnostics:PresentationTraceSources.TraceLevel="High"/>  
                            </i:EventTrigger> 
                        </i:Interaction.Triggers> 
                        <DataGridTextColumn.Header>
                            <Grid HorizontalAlignment="Stretch" 
                                  VerticalAlignment="Stretch"
                                  Margin="2">
                                <Border SnapsToDevicePixels="True" 
                                        Background="Transparent" 
                                        BorderThickness="0">
                                    <DockPanel>
                                        <TextBlock Text="Comp.:" 
                                                   DockPanel.Dock="Left" 
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center"/>
                                        <Image Source="/BDC_V1;component/Resources/Filter.png"
                                               DockPanel.Dock="Right"
                                               HorizontalAlignment="Right" 
                                               VerticalAlignment="Center"/>
                                    </DockPanel>
                                </Border>
                            </Grid>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Path=TypeName}" Width="100">
                        <i:Interaction.Triggers> 
                            <i:EventTrigger EventName="Click"> 
                                <i:InvokeCommandAction Command="{
                                    Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}},
                                            Path=DataContext.CmdFilterByTypeName}"
                                    diagnostics:PresentationTraceSources.TraceLevel="High"/>  
                            </i:EventTrigger> 
                        </i:Interaction.Triggers> 
                        <DataGridTextColumn.Header>
                            <Grid HorizontalAlignment="Stretch" 
                                  VerticalAlignment="Stretch"
                                  Margin="2">
                                <Border SnapsToDevicePixels="True" 
                                        Background="Transparent" 
                                        BorderThickness="0">
                                    <DockPanel>
                                        <TextBlock Text="Type:" 
                                                   DockPanel.Dock="Left" 
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center"/>
                                        <Image Source="/BDC_V1;component/Resources/Filter.png"
                                               DockPanel.Dock="Right"
                                               HorizontalAlignment="Right" 
                                               VerticalAlignment="Center"/>
                                    </DockPanel>
                                </Border>
                            </Grid>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Path=SectionName}" Width="100">
                        <i:Interaction.Triggers> 
                            <i:EventTrigger EventName="Click"> 
                                <i:InvokeCommandAction Command="{
                                    Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}},
                                            Path=DataContext.CmdFilterBySection}"
                                    diagnostics:PresentationTraceSources.TraceLevel="High"/>  
                            </i:EventTrigger> 
                        </i:Interaction.Triggers> 
                        <DataGridTextColumn.Header>
                            <Grid HorizontalAlignment="Stretch" 
                                  VerticalAlignment="Stretch"
                                  Margin="2">
                                <Border SnapsToDevicePixels="True" 
                                        Background="Transparent" 
                                        BorderThickness="0">
                                    <DockPanel>
                                        <TextBlock Text="Section:" 
                                                   DockPanel.Dock="Left" 
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center"/>
                                        <Image Source="/BDC_V1;component/Resources/Filter.png"
                                               DockPanel.Dock="Right"
                                               HorizontalAlignment="Right" 
                                               VerticalAlignment="Center"/>
                                    </DockPanel>
                                </Border>
                            </Grid>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding Path=InventIssue}" Width="490">
                        <i:Interaction.Triggers> 
                            <i:EventTrigger EventName="Click"> 
                                <i:InvokeCommandAction Command="{
                                    Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}},
                                            Path=DataContext.CmdFilterByIssue}"
                                    diagnostics:PresentationTraceSources.TraceLevel="High"/>  
                            </i:EventTrigger> 
                        </i:Interaction.Triggers> 
                        <DataGridTextColumn.Header>
                            <Grid HorizontalAlignment="Stretch" 
                                  VerticalAlignment="Stretch"
                                  Margin="2">
                                <Border SnapsToDevicePixels="True" 
                                        Background="Transparent" 
                                        BorderThickness="0">
                                    <DockPanel>
                                        <TextBlock Text="Inventory Issues:" 
                                                   DockPanel.Dock="Left" 
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center"/>
                                        <Image Source="/BDC_V1;component/Resources/Filter.png"
                                               DockPanel.Dock="Right"
                                               HorizontalAlignment="Right" 
                                               VerticalAlignment="Center"/>
                                    </DockPanel>
                                </Border>
                            </Grid>
                        </DataGridTextColumn.Header>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </ScrollViewer>
</UserControl>
