<UserControl x:Class="BDC_V1.Views.FacilityView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="800">

  <UserControl.Resources>
    <Style TargetType="Label"
           x:Key="LabelBase">
      <Setter Property="FontSize"
              Value="15" />
      <Setter Property="Margin"
              Value="0,5,10,5" />
      <Setter Property="VerticalContentAlignment"
              Value="Center" />
    </Style>

    <Style TargetType="Label"
           x:Key="LabelGray"
           BasedOn="{StaticResource LabelBase}">
      <Setter Property="Background"
              Value="LightGray" />
      <Setter Property="BorderBrush"
              Value="Black" />
      <Setter Property="BorderThickness"
              Value="1" />
    </Style>

    <Style TargetType="Label"
           x:Key="LabelBorder"
           BasedOn="{StaticResource LabelBase}">
      <Setter Property="BorderBrush"
              Value="Black" />
      <Setter Property="BorderThickness"
              Value="1" />
    </Style>

    <Style TargetType="Label"
           x:Key="LabelCJ"
           BasedOn="{StaticResource LabelBase}">
      <Setter Property="HorizontalContentAlignment"
              Value="Center" />
    </Style>

    <Style TargetType="Label"
           x:Key="LabelLJ"
           BasedOn="{StaticResource LabelBase}">
      <Setter Property="HorizontalContentAlignment"
              Value="Left" />
    </Style>

    <Style TargetType="Label"
           x:Key="LabelRJ"
           BasedOn="{StaticResource LabelBase}">
      <Setter Property="HorizontalContentAlignment"
              Value="Right" />
    </Style>

    <Style TargetType="Label"
           x:Key="LabelBold"
           BasedOn="{StaticResource LabelBase}">
      <Setter Property="FontWeight"
              Value="Bold" />
    </Style>

  </UserControl.Resources>

  <ScrollViewer>

    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>

      <Label Grid.Row="0"
             Grid.Column="0"
             Style="{StaticResource LabelBold}"
             Content="Identity" />

      <Label Grid.Row="1"
             Grid.Column="0"
             Style="{StaticResource LabelRJ}"
             Content="Building ID:" />
      <Label Grid.Row="1"
             Grid.Column="1"
             Style="{StaticResource LabelGray}"
             Content="{Binding LocalFacilityInfo.BuildingId}" />
      <Label Grid.Row="1"
             Grid.Column="2"
             Grid.ColumnSpan="7"
             Style="{StaticResource LabelGray}"
             Content="{Binding LocalFacilityInfo.BuildingName}" />

      <Label Grid.Row="2"
             Grid.Column="0"
             Style="{StaticResource LabelRJ}"
             Content="Building Use:" />
      <Label Grid.Row="2"
             Grid.Column="1"
             Grid.ColumnSpan="8"
             Style="{StaticResource LabelGray}"
             Content="{Binding LocalFacilityInfo.BuildingUse}" />

      <Label Grid.Row="3"
             Grid.Column="0"
             Style="{StaticResource LabelRJ}"
             Content="Const. Type:" />
      <Label Grid.Row="3"
             Grid.Column="1"
             Grid.ColumnSpan="3"
             Style="{StaticResource LabelGray}"
             Content="{Binding LocalFacilityInfo.ConstType}" />

      <Label Grid.Row="4"
             Grid.Column="0"
             Style="{StaticResource LabelRJ}"
             Content="Quantity:" />
      <Label Grid.Row="4"
             Grid.Column="1"
             Style="{StaticResource LabelGray}"
             Content="{Binding LocalFacilityInfo.TotalArea}" 
             ContentStringFormat="{}{0:#,#.00}" 
             Margin="0 0 6 0"/>
      <Label Grid.Row="4"
             Grid.Column="2"
             Style="{StaticResource LabelLJ}"
             Content="SF" />
      <Label Grid.Row="4"
             Grid.Column="3"
             Style="{StaticResource LabelRJ}"
             Content="Width:" />
      <Label Grid.Row="4"
             Grid.Column="4"
             Style="{StaticResource LabelBorder}"
             Content="{Binding LocalFacilityInfo.Width}" 
             ContentStringFormat="{}{0:#,#.0}" />
      <Label Grid.Row="4"
             Grid.Column="5"
             Style="{StaticResource LabelLJ}"
             Content="FT" />
      <Label Grid.Row="4"
             Grid.Column="6"
             Style="{StaticResource LabelRJ}"
             Content="No. Floors:" />
      <Label Grid.Row="4"
             Grid.Column="7"
             Style="{StaticResource LabelGray}"
             Content="{Binding LocalFacilityInfo.NumFloors}" />

      <Label Grid.Row="5"
             Grid.Column="0"
             Style="{StaticResource LabelRJ}"
             Content="Year Built:" />
      <Label Grid.Row="5"
             Grid.Column="1"
             Style="{StaticResource LabelGray}"
             Content="{Binding LocalFacilityInfo.YearBuilt}" />
      <Label Grid.Row="5"
             Grid.Column="3"
             Style="{StaticResource LabelRJ}"
             Content="Depth:" />
      <Label Grid.Row="5"
             Grid.Column="4"
             Style="{StaticResource LabelBorder}"
             Content="{Binding LocalFacilityInfo.Depth}" 
             ContentStringFormat="{}{0:#,#.0}" />
      <Label Grid.Row="5"
             Grid.Column="5"
             Style="{StaticResource LabelLJ}"
             Content="FT" />
      <Label Grid.Row="5"
             Grid.Column="6"
             Style="{StaticResource LabelRJ}"
             Content="Floor Height:" />
      <Label Grid.Row="5"
             Grid.Column="7"
             Style="{StaticResource LabelBorder}"
             Content="{Binding LocalFacilityInfo.Height}" 
             ContentStringFormat="{}{0:#,#.0}" />
      <Label Grid.Row="5"
             Grid.Column="8"
             Style="{StaticResource LabelLJ}"
             Content="FT" />

      <Label Grid.Row="6"
             Grid.Column="0"
             Style="{StaticResource LabelRJ}"
             Content="Alternate ID:" />
      <Label Grid.Row="6"
             Grid.Column="1"
             Style="{StaticResource LabelGray}"
             Content="{Binding LocalFacilityInfo.AlternateId}" />
      <Label Grid.Row="6"
             Grid.Column="3"
             Style="{StaticResource LabelRJ}"
             Content="Alternate ID Source:" />
      <Label Grid.Row="6"
             Grid.Column="4"
             Style="{StaticResource LabelGray}"
             Content="{Binding LocalFacilityInfo.AlternateIdSource}" />

      <Grid Grid.Row="7" Grid.Column="0" Height="120">
        <Grid.RowDefinitions>
          <RowDefinition Height="*" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Grid.RowSpan="3"
                Background="LightBlue"
                BorderBrush="Black"
                BorderThickness="1" />
        <Image Grid.Row="0"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Source="/BDC_V1;component/Resources/EditText_Comments.png"
               Width="40" />
        <Label Grid.Row="1"
               Content="Facility"
               Margin="0"
               Style="{StaticResource LabelCJ}" />
        <Label Grid.Row="2"
               Content="Comment"
               Margin="0"
               VerticalContentAlignment="Top"
               Style="{StaticResource LabelCJ}" />
      </Grid>
      <TextBox Grid.Row="7"
               Grid.Column="1"
               Grid.ColumnSpan="8"
               Background="BlanchedAlmond"
               Text="{Binding LocalFacilityInfo.FacilityComments}"
               VerticalContentAlignment="Top" 
               TextWrapping="Wrap"
               Margin="2"/>

          <Grid Grid.Row="8" Grid.Column="0" Height="120">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Grid.RowSpan="3"
                    Background="LightBlue"
                    BorderBrush="Black"
                    BorderThickness="1"/>
            <Image Grid.Row="0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Source="/BDC_V1;component/Resources/Photos_cropped.jpg"
                   Width="40"/>
            <Label Grid.Row="1"
                   Content="Photo(s)"
                   Style="{StaticResource LabelCJ}" />
            <Label Grid.Row="2"
                   Content="{Binding LocalFacilityInfo.Images.Count}"
                   Style="{StaticResource LabelCJ}" />
        </Grid >

        <Grid Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Background="BlanchedAlmond" />
            <Grid Grid.Column="0" Height="120" Width="200" Margin="2 0 2 0">
              <Border BorderBrush="Black"
                      BorderThickness="1"
                      Background="White" />
              <Image HorizontalAlignment="Right"
                     VerticalAlignment="Top"
                     Stretch="UniformToFill"
                     Source="{Binding LocalFacilityInfo.Images[0]}"/>
            </Grid>

          <Grid Grid.Column="1" Height="120" Width="200" Margin="2 0 2 0">
            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Background="White" />
            <Image HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Stretch="UniformToFill"
                   Source="{Binding LocalFacilityInfo.Images[1]}" />
          </Grid>
      </Grid>

      <Label Grid.Row="9"
             Grid.Column="0"
             Style="{StaticResource LabelBold}"
             Content="Address" />
      <Label Grid.Row="10"
             Grid.Column="0"
             Style="{StaticResource LabelRJ}"
             Content="Street:" />
      <Label Grid.Row="10"
             Grid.Column="1"
             Grid.ColumnSpan="4"
             Style="{StaticResource LabelGray}"
             Content="{Binding LocalFacilityInfo.Address.Street1}" />
      <Label Grid.Row="11"
             Grid.Column="1"
             Grid.ColumnSpan="4"
             Style="{StaticResource LabelGray}"
             Content="{Binding LocalFacilityInfo.Address.Street2}" />
      <Label Grid.Row="12"
             Grid.Column="0"
             Style="{StaticResource LabelRJ}"
             Content="City:" />
      <Label Grid.Row="12"
             Grid.Column="1"
             Grid.ColumnSpan="4"
             Style="{StaticResource LabelGray}"
             Content="{Binding LocalFacilityInfo.Address.City}" />
      <Label Grid.Row="13"
             Grid.Column="0"
             Style="{StaticResource LabelRJ}"
             Content="State/Prov:" />
      <Label Grid.Row="13"
             Grid.Column="1"
             Grid.ColumnSpan="1"
             Style="{StaticResource LabelGray}"
             Content="{Binding LocalFacilityInfo.Address.State}" />
      <Label Grid.Row="13"
             Grid.Column="3"
             Style="{StaticResource LabelRJ}"
             Content="ZIP/Postal Code:" />
      <Label Grid.Row="13"
             Grid.Column="4"
             Grid.ColumnSpan="1"
             Style="{StaticResource LabelGray}"
             Content="{Binding LocalFacilityInfo.Address.Zipcode}">
      </Label>
      <Label Grid.Row="15"
             Grid.Column="0"
             Style="{StaticResource LabelBold}"
             Content="Point of Contact" />
      <Label Grid.Row="16"
             Grid.Column="0"
             Style="{StaticResource LabelRJ}"
             Content="Name:" />
      <Label Grid.Row="16" Name="FirstLastName"
             Grid.Column="1"
             Grid.ColumnSpan="4"
             Style="{StaticResource LabelGray}">
          <Label.Content>
              <Binding Path="LocalFacilityInfo.Contact.Name.FirstLast" />
              <!--<MultiBinding StringFormat="{}{0} {1}">
                  <Binding Path="LocalFacilityInfo.Contact.Name.FirstName" />
                  <Binding Path="LocalFacilityInfo.Contact.Name.LastName" />
              </MultiBinding>-->
          </Label.Content>
      </Label>
      <Label Grid.Row="17"
             Grid.Column="0"
             Style="{StaticResource LabelRJ}"
             Content="Phone:" />
      <Label Grid.Row="17"
             Grid.Column="1"
             Grid.ColumnSpan="4"
             Style="{StaticResource LabelGray}"
             Content="{Binding LocalFacilityInfo.Contact.Phone}" />
      <Label Grid.Row="18"
             Grid.Column="0"
             Style="{StaticResource LabelRJ}"
             Content="E-Mail:" />
      <Label Grid.Row="18"
             Grid.Column="1"
             Grid.ColumnSpan="4"
             Style="{StaticResource LabelGray}"
             Content="{Binding LocalFacilityInfo.Contact.EMail}" />
    </Grid>
  </ScrollViewer>
</UserControl>
