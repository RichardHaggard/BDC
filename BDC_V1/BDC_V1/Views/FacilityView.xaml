<UserControl 
    x:Class="BDC_V1.Views.FacilityView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:prism="http://prismlibrary.com/"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d" 
    d:DesignHeight="600" d:DesignWidth="800"
    >

    <UserControl.Resources>
        <Style TargetType="Label" x:Key="LabelBase">
            <Setter Property="FontSize" Value="15" />
            <Setter Property="Margin" Value="0,5,10,5" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

        <Style TargetType="Label" x:Key="LabelGray" BasedOn="{StaticResource LabelBase}">
            <Setter Property="Background" Value="LightGray" />
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <Style TargetType="Label" x:Key="LabelBorder" BasedOn="{StaticResource LabelBase}">
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <Style TargetType="Label" x:Key="LabelCJ" BasedOn="{StaticResource LabelBase}">
            <Setter Property="HorizontalContentAlignment" Value="Center" />
        </Style>

        <Style TargetType="Label" x:Key="LabelLJ" BasedOn="{StaticResource LabelBase}">
            <Setter Property="HorizontalContentAlignment" Value="Left" />
        </Style>

        <Style TargetType="Label" x:Key="LabelRJ" BasedOn="{StaticResource LabelBase}">
            <Setter Property="HorizontalContentAlignment" Value="Right" />
        </Style>

        <Style TargetType="Label" x:Key="LabelBold" BasedOn="{StaticResource LabelBase}">
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

    </UserControl.Resources>

    <ScrollViewer>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Style="{StaticResource LabelBold}"  Content="Identity" />
            
            <Label Grid.Row="1" Grid.Column="0" Style="{StaticResource LabelRJ}" Content="Building ID:" />
            <Label Grid.Row="1" Grid.Column="1" Style="{StaticResource LabelGray}" Content="{Binding BuildingIdShort}" />
            <Label Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="7"  Style="{StaticResource LabelGray}" Content="{Binding BuildingIdLong}" />
            
            <Label Grid.Row="2" Grid.Column="0" Style="{StaticResource LabelRJ}" Content="Building Use:" />
            <Label Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="8" Style="{StaticResource LabelGray}" Content="{Binding BuildingUse}" />
            
            <Label Grid.Row="3" Grid.Column="0" Style="{StaticResource LabelRJ}" Content="Const. Type:" />
            <Label Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Style="{StaticResource LabelGray}" Content="{Binding ConstType}" />
            
            <Label Grid.Row="4" Grid.Column="0" Style="{StaticResource LabelRJ}" Content="Quantity:" />
            <Label Grid.Row="4" Grid.Column="1" Style="{StaticResource LabelGray}" Content="{Binding Quantity}" />
            <Label Grid.Row="4" Grid.Column="2" Style="{StaticResource LabelLJ}" Content="SF" />
            <Label Grid.Row="4" Grid.Column="3" Style="{StaticResource LabelRJ}" Content="Width:" />
            <Label Grid.Row="4" Grid.Column="4" Style="{StaticResource LabelBorder}" Content="{Binding Width}" />
            <Label Grid.Row="4" Grid.Column="5" Style="{StaticResource LabelLJ}" Content="FT" />
            <Label Grid.Row="4" Grid.Column="6" Style="{StaticResource LabelRJ}" Content="No. Floors:" />
            <Label Grid.Row="4" Grid.Column="7" Style="{StaticResource LabelGray}" Content="{Binding NoFloors}" />

            <Label Grid.Row="5" Grid.Column="0" Style="{StaticResource LabelRJ}" Content="Year Built:" />
            <Label Grid.Row="5" Grid.Column="1" Style="{StaticResource LabelGray}" Content="{Binding YrBuilt}" />
            <Label Grid.Row="5" Grid.Column="3" Style="{StaticResource LabelRJ}" Content="Depth:" />
            <Label Grid.Row="5" Grid.Column="4" Style="{StaticResource LabelBorder}" Content="{Binding Depth}" />
            <Label Grid.Row="5" Grid.Column="5" Style="{StaticResource LabelLJ}" Content="FT" />
            <Label Grid.Row="5" Grid.Column="6" Style="{StaticResource LabelRJ}" Content="Floor Height:" />
            <Label Grid.Row="5" Grid.Column="7" Style="{StaticResource LabelBorder}" Content="{Binding FloorHeight}" />
            <Label Grid.Row="5" Grid.Column="8" Style="{StaticResource LabelLJ}" Content="FT" />

            <Label Grid.Row="6" Grid.Column="0" Style="{StaticResource LabelRJ}" Content="Alternate ID:" />
            <Label Grid.Row="6" Grid.Column="1" Style="{StaticResource LabelGray}" Content="{Binding AltIdSource}" />
            <Label Grid.Row="6" Grid.Column="3" Style="{StaticResource LabelRJ}" Content="Alternate ID Source:" />
            <Label Grid.Row="6" Grid.Column="4" Style="{StaticResource LabelGray}" Content="{Binding AltIdSource}" />

            <Grid Grid.Row="7">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Border
                    Grid.Row="0" Grid.RowSpan="3" Grid.Column="0"
                    Background="LightBlue"
                    BorderBrush="Black"
                    BorderThickness="1"
                    />
                <Image 
                    Grid.Row="0" 
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Source="/BDC_V1;component/Resources/EditText_Comments.png"
                    Width="40"
                    />
                <Label
                    Grid.Row="1" 
                    Content="Facility" 
                    Margin="0"
                    Style="{StaticResource LabelCJ}"
                    />
                <Label
                    Grid.Row="2" 
                    Content="Comment" 
                    Margin="0"
                    VerticalContentAlignment="Top"
                    Style="{StaticResource LabelCJ}"
                    />
            </Grid>
            <TextBox 
                Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="8" 
                Background="BlanchedAlmond"
                Text="{Binding FacilityComment}"
                VerticalContentAlignment="Top"
                />


            <Grid Grid.Row="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Border
                    Grid.Row="0" Grid.RowSpan="3" Grid.Column="0"
                    Background="LightBlue"
                    BorderBrush="Black"
                    BorderThickness="1"
                    />
                <Image
                    Grid.Row="0" 
                    Source="/BDC_V1;component/Resources/Photos_cropped.jpg" 
                    Width="40"
                    />
                <Label 
                    Grid.Row="1" 
                    Content="Photo(s)"
                    Style="{StaticResource LabelCJ}"/>
                <Label 
                    Grid.Row="2" 
                    Content="{Binding PhotoQty}"
                    Style="{StaticResource LabelCJ}"/>
            </Grid>
            <Border Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="8" 
                Background="BlanchedAlmond" />
            <Border Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="2" 
                BorderBrush="Black" BorderThickness="1"
                Background="White" />
            <TextBox Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="2" 
                 TextWrapping="Wrap"
                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                 Text="Thumbnail 1 of Facility Photo"
                 />
            <Border Grid.Row="8" Grid.Column="4" Grid.ColumnSpan="2" 
                BorderBrush="Black" BorderThickness="1"
                Background="White" />
            <TextBox Grid.Row="8" Grid.Column="4" Grid.ColumnSpan="2" 
                 TextWrapping="Wrap"
                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                 Text="Thumbnail 1 of Facility Photo"
                 />

            <Label Grid.Row="9" Grid.Column="0" Style="{StaticResource LabelBold}" Content="Address" />
            <Label Grid.Row="10" Grid.Column="0" Style="{StaticResource LabelRJ}" Content="Street:" />
            <Label Grid.Row="10" Grid.Column="1" Grid.ColumnSpan="4" Style="{StaticResource LabelGray}" Content="{Binding Street}" />
            <Label Grid.Row="11" Grid.Column="0" Style="{StaticResource LabelRJ}" Content="City:" />
            <Label Grid.Row="11" Grid.Column="1" Grid.ColumnSpan="4" Style="{StaticResource LabelGray}" Content="{Binding City}" />
            <Label Grid.Row="12" Grid.Column="0" Style="{StaticResource LabelRJ}" Content="State/Prov:" />
            <Label Grid.Row="12" Grid.Column="1" Grid.ColumnSpan="1" Style="{StaticResource LabelGray}" Content="{Binding StateProv}" />
            <Label Grid.Row="12" Grid.Column="3" Style="{StaticResource LabelRJ}" Content="ZIP/Postal Code:" />
            <Label Grid.Row="12" Grid.Column="4" Grid.ColumnSpan="1" Style="{StaticResource LabelGray}" Content="{Binding ZipPostCode}" />

            <Label Grid.Row="13" Grid.Column="0" Style="{StaticResource LabelBold}" Content="Point of Contact" />
            <Label Grid.Row="14" Grid.Column="0" Style="{StaticResource LabelRJ}" Content="Name:" />
            <Label Grid.Row="14" Grid.Column="1" Grid.ColumnSpan="4" Style="{StaticResource LabelGray}" Content="{Binding PocName}" />
            <Label Grid.Row="15" Grid.Column="0" Style="{StaticResource LabelRJ}" Content="Phone:" />
            <Label Grid.Row="15" Grid.Column="1" Grid.ColumnSpan="4" Style="{StaticResource LabelGray}" Content="{Binding PocPhone}" />
            <Label Grid.Row="16" Grid.Column="0" Style="{StaticResource LabelRJ}" Content="E-Mail:" />
            <Label Grid.Row="16" Grid.Column="1" Grid.ColumnSpan="4" Style="{StaticResource LabelGray}" Content="{Binding PocEmail}" />
        </Grid>
    </ScrollViewer>
</UserControl>
